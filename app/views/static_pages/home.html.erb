<h1>Beatbox Homepage</h1>
<%= search_form_for @q do |f| %>
  <%= f.search_field :stage_name_cont %>
  <%= f.submit %>
  <% end %>

<h3><%= link_to "Sign In", new_user_session_path %></h3>
<h3><%= link_to "Register", new_user_registration_path %></h3>

<div id="tag_cloud">
  <% tag_cloud Song.tag_counts, %w[s m l] do |tag, css_class| %>
  <%= link_to tag.name, tag_path(tag.name), class: css_class %>
  <% end %>
</div>

