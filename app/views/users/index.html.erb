 <p id="notice"><%= notice %></p>

<h1>Listing Users</h1>

<table>
 <thead>
   <tr>
     <th>Profile Picture</th>
     <th>Stage Name</th>
     <th>Name</th>
     <th>Age</th>
     <th>Email</th>
     
     <th colspan="3"></th>
   </tr>
 </thead>

 <tbody>
   <% @users.each do |user| %>
     <tr>
       <td><%= image_tag user.profile_picture.thumb.url %></td>
       <td><%= user.full_name %></td>
       <td><%= user.stage_name %></td>
       <td><%= user.age %></td>
       <td><%= user.email %></td>
       <td><%= link_to 'Show', user %></td>
       <td><%= link_to 'Delete', user, method: :delete, data: { confirm: 'Are you sure?' } %></td>
     </tr>
   <% end %>
 </tbody>
</table>

<br>