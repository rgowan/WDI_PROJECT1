<p>
  <strong>Title:</strong>
  <%= @song.title %>
</p>

<p>
  <strong>Artist:</strong>
  <%= @song.user.stage_name %>
</p>

<p>
  <strong>Song:</strong>
  <audio src="<%= @song.music_file.url %>" controls></audio>
</p>

<p>
  <strong>Artwork:</strong>
  <%= image_tag @song.artwork.detail.url %>
</p>

<p>
  <strong>Tags:</strong>
  <%= raw @song.tag_list.map { |t| link_to t, tag_path(t)}.join(", ") %>
</p>

<%= render partial: 'comments/form', locals: { commentable: @song } %>

<ul>
  <%= render partial: 'comments/comment', collection: @comments, locals: { commentable: @song} %>
</ul>

<%= link_to 'Edit', edit_song_path(@song) %> |
<%= link_to 'Back', songs_path %>
